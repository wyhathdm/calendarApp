                    <div class="day" id="day18"></div>
                    <div class="day" id="day19"></div>
                    <div class="day" id="day20"></div>
                    <div class="day" id="day21"></div>
                    <div class="day" id="day22"></div>
                    <div class="day" id="day23"></div>
                    <div class="day" id="day24"></div>
