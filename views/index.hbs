<!DOCTYPE html>
<html>


<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Calendar app</title>
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link href="https://fonts.googleapis.com/css?family=Russo+One" rel="stylesheet">

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
</head>

<body id="transition">
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn">&times;</a>
        <a href="javascript:void(0)" class="thumbbtn" onclick=""><i class="fas fa-thumbtack"></i></a>
        <h3 id="modalDayText"></h3>
        <form id="allData" action="">
            <div class="form-grid">
                <h3 class="add-event-h3">Event:</h3>

                <label class="form-1" for="add-event">
                <input name="event" placeholder="Add Event:"id="sideInput" class='eventName' type="text">
                </label>

                <h3 class="time-h3">Time:</h3>

                <label class="form-2" for="add-time">
                <input name="time" class='timeVal' placeholder="Time:"id="sideInput"type="text">
                </label>

                <h3 class="location-h3">Location:</h3>

                <label class="form-3" for="add-location">
                <input name="location" class='locVal' placeholder="Location:"id="sideInput"type="text">
                </label>


                <!-- start end -->

                <h3 class="start-h3">Start:</h3>

                <label class="form-4" for="add-start">
                <input name="start" class='startVal' placeholder="Start:"id="sideInput"type="text">
                </label>


                <h3 class="end-h3">End:</h3>

                <label class="form-5" for="add-end">
                <input name="end" class='endVal' placeholder="End:"id="sideInput"type="text">
                </label>
                <!-- time -->


                <label class="form-6" for="add-time-start">
                    <input name="time-start" class='startTime' placeholder="Time Start:" id="sideInput" type="text">
                </label>



                <label class="form-7" for="add-time-end">
                        <input name="time-end"class='endTime' placeholder="Time End:"id="sideInput"type="text">
                        </label>

                <!-- end time and start end -->

                <h3 class="color-h3">Color: </h3>

                <label class="color-dropdown">
                    <input name="color" type="color" name="color-select" class="color-select" id="colorSelect">
                </label>




                <input name="submit" class="form-8 submit" type="button" value="Add Event">


            </div>
    </div>

    <div id="main">
        <div class="container-wrap">
            <div class="h1-container">

                <h1 id="month_Year"></h1>
                <a href="#" id="grid-prev" class="btn prev" onclick="prevMonth();"> <i class="fa fa-angle-left" id="btn-prev" aria-hidden="true" href="#"></i></a>
                <a href="#" id="grid-next" class="btn next" onclick="nextMonth();"><i class="fa fa-angle-right" id="btn-next" aria-hidden="true" ></i></a>

            </div>
            <div class="day-container">
                <div class="weekday">Sun</div>
                <div class="weekday">Mon</div>
                <div class="weekday">Tue</div>
                <div class="weekday">Wed</div>
                <div class="weekday">Thu</div>
                <div class="weekday">Fri</div>
                <div class="weekday">Sat</div>
            </div>






            <div class="container-wrap">
                <div class="calendar-container">

                    <div class="day" id="day0"></div>
                    <div class="day" id="day1"></div>
                    <div class="day" id="day2"></div>
                    <div class="day" id="day3"></div>
                    <div class="day" id="day4"></div>
                    <div class="day" id="day5"></div>
                    <div class="day" id="day6"></div>
                    <div class="day" id="day7"></div>
                    <div class="day" id="day8"></div>
                    <div class="day" id="day9"></div>
                    <div class="day" id="day10"></div>
                    <div class="day" id="day11"></div>
                    <div class="day" id="day12"></div>
                    <div class="day" id="day13"></div>
                    <div class="day" id="day14"></div>
                    <div class="day" id="day15"></div>
                    <div class="day" id="day16"></div>
